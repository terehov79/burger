.info
  width 100%
  padding 80px 0 0
  .twopic
    height: 100%;
    display: flex;
    flex-direction column
    justify-content: space-between;
    .info_pictures
      @media $lg-and-smaller
        margin-top 30px
    p:last-child
      width 100%
      max-width: 170px;
      @media $lg-and-smaller
        max-width 100%
      @media $xs-and-smaller
        max-width: 120px;
  img
    width 100%
  &_pictures
    width: 100%;
    display block
    position: relative;
    &__box
      width 100%
      position absolute
      top 0
      left 0
      z-index 1
      padding: 20px;
      @media $xs-and-smaller
        padding: 10px;
      p
        color white
        font-family titleFont
        font-size 20px
        line-height: 1.1;
        @media $lg-and-smaller
          font-size 30px
        @media $xs-and-smaller
          font-size 20px
      p:last-child
        font-size 35px
        @media $lg-and-smaller
          font-size 25px

  .btn_global
    size(220px 50px)
    background-color #ffc045
    font-family titleFont
    font-size 25px
    align-items: center;
    color baseBrown
    margin 70px auto 0