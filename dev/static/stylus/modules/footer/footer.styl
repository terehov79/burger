.footer
  width 100%
  height: 525px;
  background-image url("../img/content/footer_bg.png")
  background-repeat no-repeat
  background-size cover
  margin-bottom: 65px;
  padding 50px
  @media $md-and-smaller
    padding 20px
  @media $sm-and-smaller
    height auto
  @media $xs-and-smaller
    margin-bottom 20px
  &_logo
    width 100%
    min-height 390px
    @media $md-and-smaller
      min-height 300px
    .logotype
      &__img
        width 100%
      &__picture
        width: 100%;
        display: block;
      img
        filter invert(100%) brightness(200%)
        size(410px,90px)
        @media $xs-and-smaller
          width 100%
          height: auto;
    p
      color white
      font-size 16.67px
      line-height: 1.8;
      text-align justify
      padding-top: 50px;
      max-width 85%
      @media $md-and-smaller
        max-width 100%
      @media $xs-and-smaller
        line-height: 1.2;
  &__main
    width 100%
  &__copyright
    width 100%
    display flex
    justify-content: space-between;
    align-items: center;
    @media $sm-and-smaller
      flex-direction column-reverse
    p.copy
      font-family: titleFont;
      color white
      letter-spacing 1.1px
      @media $sm-and-smaller
        font-size 14px

.location
  width: 100;
  height: 100%;
  display: flex;
  flex-direction column
  justify-content: center;
  padding-left: 40%;
  padding-top 5%
  @media $lg-and-smaller
    padding-left: 10%;
  @media $md-and-smaller
    padding-bottom 35px
  @media $xs-and-smaller
    padding-left 0
  &__address
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-bottom: 10px;
    svg
      size(41px, 33px)
      fill white
    p
      color white
      font-family titleFont
      margin-left 20px
      letter-spacing 1.1px
.social
  display flex
  justify-content: flex-end;
  @media $sm-and-smaller
    padding-bottom: 20px;
  &__item
    margin-left 20px
  &__link
    size(30px)
    background-color white
    border-radius 50%
    display flex
    justify-content: center;
    align-items: center;
  svg
    size(60%)
    fill black